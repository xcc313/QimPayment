<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.action.extension" value="do,"/>

    <package name="json-default" extends="struts-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult" />
        </result-types>
        <interceptors>
            <interceptor name="json"
                         class="org.apache.struts2.json.JSONInterceptor" />
            <interceptor name="jsonValidation"
                         class="org.apache.struts2.json.JSONValidationInterceptor" />
            <interceptor-stack name="jsonValidationWorkflowStack">
                <interceptor-ref name="basicStack" />
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="jsonValidation" />
                <interceptor-ref name="workflow" />
            </interceptor-stack>
        </interceptors>
    </package>
    <package name="framework" namespace="/" extends="json-default">
        <global-results>
            <result name="ajaxActionCompleted" type="json">
                <param name="root">ajaxActionResult</param>
            </result>
        </global-results>

        <action name="File!*" class="com.framework.action.FileAction" method="{1}">
        </action>

        <!-- compatible api -->
        <action name="shoppay.*" class="com.weixin.action.WebpagePayAction" method="prePay">
        </action>
        <action name="jjzzjjzz.*" class="com.weixin.action.WebpagePayAction" method="scanPay">
            <result name="scanPay">./weixin/scanpay.jsp</result>
        </action>
        <action name="WebpagePayAction!*" class="com.weixin.action.WebpagePayAction" method="{1}">
            <result name="scanPay">./weixin/scanpay.jsp</result>
        </action>
        <action name="downfile.*" class="com.framework.action.FileAction" method="DownLoadFile">
        </action>
        <action name="sign.*" class="com.merchant.action.SubMerchantUserAction" method="oldBindMsg">
        </action>
        <action name="interface.*" class="com.weixin.action.OrderAction" method="invalidQuery">
        </action>
    </package>

    <include file="com/api/struts-api.xml" />
    <include file="com/merchant/struts-merchant.xml" />

    <constant name="struts.custom.i18n.resources" value="com/weixin/mui/resources"/>
    <include file="com/weixin/struts-weixin.xml" />
    
    <include file="com/alipay/struts-alipay.xml" />
    <include file="com/jdpay/struts-jdpay.xml" />
</struts>