<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.merchant.database.mapping.subMerchantInfo">
    <select id="getSubMerchantInfoById" parameterType="long" resultMap="subMerchantInfoResult">
      SELECT * FROM SubMerchant WHERE id=#{id}
    </select>
    <select id="getSubMerchantLogoById" parameterType="long" resultMap="subMerchanLogo">
        SELECT logo FROM SubMerchant WHERE id=#{id}
    </select>
    <resultMap id="subMerchanLogo" type="com.merchant.database.SubMerchantInfo">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="logo" property="logo" jdbcType="BLOB" />
    </resultMap>
    <resultMap type="com.merchant.database.SubMerchantInfo" id="subMerchantInfoResult">
        <id property="id" column="id" jdbcType="BIGINT" />
        <result property="merchantId" column="merchantId" jdbcType="BIGINT" />
        <result property="name" column="name" jdbcType="VARCHAR" />
        <result property="salemanId" column="salemanId" jdbcType="BIGINT" />
        <result property="ads" column="ads" jdbcType="VARCHAR" />
        <result property="templateId" column="templateId" jdbcType="VARCHAR"/>
    </resultMap>
    <insert id="insertSubMerchantInfo" parameterType="com.merchant.database.SubMerchantInfo">
        INSERT INTO SubMerchant(id,merchantId,name,address)
        VALUE (#{id},#{merchantId},#{name},#{address})
    </insert>
    <update id="updateWeixinIdById" parameterType="com.merchant.database.SubMerchantInfo">
        UPDATE SubMerchant
        SET weixinId = #{weixinId}
        WHERE id = #{id}
    </update>
    <update id="updateLogoById" parameterType="com.merchant.database.SubMerchantInfo">
        UPDATE SubMerchant
        SET logo = #{logo}
        WHERE id = #{id}
    </update>
    <update id="updateWeixinInfoById" parameterType="com.merchant.database.SubMerchantInfo">
        UPDATE SubMerchant
        SET appid = #{appid}, appsecret=#{appsecret}, templateId=#{templateId}
        WHERE id = #{id}
    </update>

</mapper>